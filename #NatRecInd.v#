Inductive Nat : Type :=
  | O
  | S (n : Nat).

Fixpoint plus (n : Nat) (m : Nat) : Nat :=
  match m with
    | O => n
    | S m' => S (plus n m')
  end.
  
  Notation "x + y" := (plus x y)
                       (at level 50, left associativity)
                       : nat_scope.
  
(*EXERCÃCIO x4.3 FMCBOOK*)
Compute (plus 0 (S (S (S (S O))))).

(*EXERCÃCIO X4.4 FMCBOOK* usando notation)
Compute S (S (S O)) + (S(S O)+S O).
Compute (S (S (S O)) + S (S O)) + S O.

(*EXERCÃCIO X4.5 FMCBOOK*)
Fixpoint d (n:Nat): Nat :=
  match n with
  | O => O
  | S n' => S (S (d n'))
  end.
